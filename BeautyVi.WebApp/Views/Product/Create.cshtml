@model BeautyVi.Core.Entities.Product

<h2>Додати новий продукт</h2>
<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" method="post" enctype="multipart/form-data">
    <div>
        <label asp-for="Name">Назва</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Description">Склад</label>
        <textarea asp-for="Description" class="form-control"></textarea>
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="Price">Ціна</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="CategoryId">Категорія</label>
        <select asp-for="CategoryId" asp-items="ViewBag.CategoryList" class="form-control"></select>
        <span asp-validation-for="CategoryId" class="text-danger"></span>
    </div>

    <div>
        <label asp-for="CoverFile">Фото</label>
        <input asp-for="CoverFile" type="file" class="form-control" />
        <span asp-validation-for="CoverFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Додати</button>
</form>
