@model IEnumerable<BeautyVi.Core.Entities.Order>

@{
    ViewData["Title"] = "Orders";
}

<div class="container mt-5 mb-5">
    <h2 class="text-center text-uppercase" style="color: #7a6f5b; font-family: 'Playfair Display', serif;">Список замовлень</h2>

    <table class="table table-striped mt-4" style="border: 1px solid #e3e3e3; border-radius: 8px;">
        <thead style="background-color: #7a6f5b; color: #fff;">
            <tr>
                <th style="text-align: center;">Замовлення № </th>
                @if (User.IsInRole("Admin"))
                {
                    <th style="text-align: center;">Користувач</th>
                }
                <th style="text-align: center;">Дата замовлення</th>
                <th style="text-align: center;">Статус</th>
                <th style="text-align: center;">Загальна сума</th>
                <th style="text-align: center;">Адреса доставки</th>
                <th style="text-align: center;">Дії</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td style="text-align: center; color: #4a4a4a;">@order.Id</td>
                    @if (User.IsInRole("Admin"))
                    {
                        <td style="text-align: center; color: #4a4a4a;">@order.User?.UserName</td>
                    }
                    <td style="text-align: center; color: #4a4a4a;">@order.OrderDate</td>
                    <td style="text-align: center; color: #4a4a4a;">@order.Status</td>
                    <td style="text-align: center; color: #7a6f5b; font-weight: bold;">@order.TotalAmount</td>
                    <td style="text-align: center; color: #4a4a4a;">@order.ShippingAddress</td>
                    <td style="text-align: center;">
                        <a href="@Url.Action("Details", "Order", new { id = order.Id })"
                           style="color: #7a6f5b; text-decoration: none; font-weight: bold;">Деталі</a> 
                        @if (User.IsInRole("Admin"))
                        {
                            <a href="@Url.Action("Edit", "Order", new { id = order.Id })"
                               style="color: #7a6f5b; text-decoration: none; font-weight: bold;">| Редагувати</a>
                        }
                        </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="text-center mt-4">
        <a href="@Url.Action("Create", "Order")" class="btn"
           style="background-color: transparent; color: #7a6f5b; border: 2px solid #7a6f5b; padding: 10px 30px; font-weight: bold; border-radius: 4px; text-transform: uppercase; text-decoration: none;">
            Створити нове замовлення
        </a>
    </div>
</div>
