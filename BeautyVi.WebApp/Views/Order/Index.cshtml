@model IEnumerable<BeautyVi.Core.Entities.Order>

@{
    ViewData["Title"] = "Orders";
}

<h2>Orders</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>User</th>
            <th>Order Date</th>
            <th>Status</th>
            <th>Total Amount</th>
            <th>Shipping Address</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.User?.UserName</td>
                <td>@order.OrderDate.ToString("yyyy-MM-dd")</td>
                <td>@order.Status</td>
                <td>@order.TotalAmount.ToString("C")</td>
                <td>@order.ShippingAddress</td>
                <td>
                    <a href="@Url.Action("Details", "Order", new { id = order.Id })">Деталі</a> |
                    <a href="@Url.Action("Edit", "Order", new { id = order.Id })">Редагувати</a> |
                    <a href="@Url.Action("Delete", "Order", new { id = order.Id })">Видалити</a>
                </td>
            </tr>
        }
    </tbody>
</table>
